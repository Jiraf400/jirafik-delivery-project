<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/phone_verification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBrown"
        tools:context=".activities.PhoneVerificationActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_registration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:layout_marginTop="36dp"
            android:textAlignment="center" />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="100dp"
            app:cardBackgroundColor="@color/lightBrown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp"
            android:elevation="10dp">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

            <TextView
                    android:id="@+id/tv_enter_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto" />

            <EditText
                    android:id="@+id/et_pv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:paddingVertical="16dp"
                    android:hint="@string/here"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/phone_svgrepo_com"
                    android:drawablePadding="6dp"
                    android:inputType="phone"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/rounded_edittext" />

            <EditText
                    android:id="@+id/et_pv_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:paddingVertical="16dp"
                    android:hint="@string/here"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/phone_svgrepo_com"
                    android:drawablePadding="6dp"
                    android:inputType="phone"
                    android:fontFamily="@font/roboto"
                    android:background="@drawable/rounded_edittext"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/havent_received_code"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    android:textColor="#C0C0C0"
                    android:visibility="gone" />

            <Button
                    android:id="@+id/btn_phone_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.FloatingActionButton.Surface"
                    android:text="@string/submit"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:layout_marginBottom="32dp"
                    android:paddingHorizontal="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_light" />

            <Button
                    android:id="@+id/btn_code_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.FloatingActionButton.Surface"
                    android:text="@string/submit"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:layout_marginBottom="32dp"
                    android:paddingHorizontal="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_light"
                    android:visibility="gone"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>